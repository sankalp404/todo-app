<% if @todo.errors.any? %>
    <div>
      <h2>
        <%= pluralize(@todo.errors.count, 'error') %> encountered.
      </h2>
      <ul>
        <% @todo.errors.full_messages.each do |e|  %>
            <li>
              <%= e %>
            </li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @todo do |f|  %>
    <p>
      <%= f.label :name %> <br>
      <%= f.text_field :name  %>
    </p>
    <p>
      <%= f.label :description %> <br>
      <%= f.text_area :description  %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>